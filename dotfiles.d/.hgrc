[ui]
#username = Johnny Chadda <johnny@nodomain>
merge = internal:merge

[alias]
slog = log --style ~/.hg/ext/mercurial-cli-templates/map-cmdline.slog
nlog = log --style ~/.hg/ext/mercurial-cli-templates/map-cmdline.nlog
sglog = glog --style ~/.hg/ext/mercurial-cli-templates/map-cmdline.sglog

[extensions]
mq =
histedit =
rebase =
pager =
purge =
hgflow=~/.hg/ext/hgflow.py
shelve =
color =

[flow]
autoshelve = true

[pager]
pager = LESS='FRX' less

